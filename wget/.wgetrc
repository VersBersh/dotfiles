# When using the dot progress indicator default to the mega style
dot_style = mega

# Follow FTP links from HTML documents by default
follow_ftp = on

# Default to using UTF-8 as the system encoding scheme
local_encoding = UTF-8

# Do not go up in the directory structure when downloading recursively
no_parent = on

# The default progress indicator to use (either dot or bar)
progress = bar

# Ignore `robots.txt` and `<meta name=robots content=nofollow>`
robots = off

# Print the HTTP and FTP server responses
server_response = on

# Set a sane global timeout value of 60 seconds (default is 900!)
timeout = 60

# Use the last modification date provided by the server when available
timestamping = on

# Set a sane default number of retries (default is 20!)
tries = 3

# Use the last component of a redirection URL for the local file name
trust_server_names = on

# Disguise as IE 9 on Windows 7
user_agent = Mozilla/5.0 (compatible; MSIE 9.0; Windows NT 6.1; Trident/5.0)

