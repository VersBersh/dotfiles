{
    // File paths to language mappings
    "files.associations": {
        // curl
        ".curlrc": "properties",

        // less
        ".lesskey": "properties",

        // markdownlint
        ".markdownlintrc": "jsonc",

        // mysql
        ".my.cnf": "ini",

        // npm
        ".npmrc": "ini",

        // openssh
        "**/openssh/**": "ssh_config",

        // pip
        "pip.conf": "ini",

        // quilt
        ".quiltrc": "shellscript",

        // sbuild
        ".mk-sbuild.rc": "shellscript",

        // xdg-user-dir
        "user-dirs.dirs": "shellscript"
    },

    "powershell.scriptAnalysis.settingsPath": ".vscode\\PSScriptAnalyzerSettings.psd1",

    "[bat]": {
        "editor.rulers": [79],
    },

    "[shellscript]": {
        "editor.rulers": [79],
    }
}
